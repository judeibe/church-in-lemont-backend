{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "lint": {
      "dependsOn": ["^lint"],
      "outputs": ["src/**"]
    },
    "build": {
      "outputs": ["dist/**"]
    },
    "start": {
      "cache": false,
      "persistent": true
    },
    "start:dev": {
      "cache": false,
      "persistent": true
    },
    "test:cov": {
      "dependsOn": ["^lint", "^test"],
      "outputs": ["coverage/**"]
    }
  }
}
